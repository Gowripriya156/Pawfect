  <label for="filter">Filter by Type:</label>
  <select id="filter">
    <option value="all">All</option>
    <option value="dog">Dogs</option>
    <option value="cat">Cats</option>
  </select>
</section>

<section class="pet-grid" id="petGrid">
</section>

<script>
  const pets = [
    { name: "Buddy", type: "dog", img: "https://t4.ftcdn.net/jpg/02/90/84/47/360_F_290844781_V4hoIL3E291xvY5nEL7NCaWIoCIQxHfI.jpg", age: "2 months" },
    { name: "Whiskers", type: "cat", img: "https://media.istockphoto.com/id/508030340/photo/sunny-cat.jpg?s=612x612&w=0&k=20&c=qkz-Mf32sbJnefRxpB7Fwpcxbp1fozYtJxbQoKvSeGM=", age: "2 months" },
    { name: "Rocky", type: "dog", img: "https://s3-prod.dogtopia.com/wp-content/uploads/2019/03/0-570x380.jpg", age: "3 months" },
    { name: "Luna", type: "cat", img: "https://www.purina.in/sites/default/files/2020-11/8-Fluffy-Cat-BreedsTEASER.jpg", age: "6 months" }
  ];

  const petGrid = document.getElementById("petGrid");
  const filter = document.getElementById("filter");

  function displayPets(filterType) {
    petGrid.innerHTML = '';
    const filtered = filterType === 'all' ? pets : pets.filter(p => p.type === filterType);
    filtered.forEach((pet, index) => {
      const card = document.createElement('div');
      card.className = 'pet-card';
      card.innerHTML = `
        <img src="${pet.img}" alt="${pet.name}" />
        <div class="pet-info">
          <h3>${pet.name}</h3>
          <p>Type: ${pet.type.charAt(0).toUpperCase() + pet.type.slice(1)}</p>
          <p>Age: ${pet.age}</p>
          <button class="btn adopt-btn" data-name="${pet.name}">Adopt Me</button>
        </div>
      `;
      petGrid.appendChild(card);
    });

    document.querySelectorAll('.adopt-btn').forEach(button => {
      button.addEventListener('click', (e) => {
        const petName = e.target.dataset.name;
        const userName = prompt(`Enter your name to adopt ${petName}:`);
        if (!userName || userName.trim().length < 2) {
          alert("Please enter a valid name (at least 2 characters).");
          return;
        }
        const email = prompt(`Enter your email address:`);
        if (!email || !/\S+@\S+\.\S+/.test(email)) {
          alert("Please enter a valid email address.");
          return;
        }
        const phone = prompt(`Enter your phone number:`);
        if (!phone || !/^\d{10}$/.test(phone)) {
          alert("Please enter a valid 10-digit phone number.");
          return;
        }
        alert(`Thank you, ${userName}! We will contact you shortly at ${email} or ${phone} about adopting ${petName}.`);
      });
    });
  }

  filter.addEventListener("change", (e) => {
    displayPets(e.target.value);
  });

  displayPets('all');
</script>

</body>
